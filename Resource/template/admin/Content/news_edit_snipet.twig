{% block main %}
<script>
((d)=>{
    
    f = d.querySelector('#form1');
    f.setAttribute('enctype','multipart/form-data');

    const p = "{{ asset('', 'save_image') }}",
    t = d.querySelector('#admin_news_np_thumbnail_url');
    let i = d.createElement('img');
    if(!t.value){
        t.outerHTML = "";
        return;
    };
    
    i.setAttribute('style','max-width:500px;max-height:500px');
    i.src = p + t.value;
    t.outerHTML = t.outerHTML+i.outerHTML;
})(document);
</script>
{% endblock %}
